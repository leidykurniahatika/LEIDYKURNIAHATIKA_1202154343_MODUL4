<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.tugas.leidy.leidykurniahatika_1202154343_modul4.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="Menu Utama"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_list_nama_mahasiswa"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="List Nama Mahasiswa"
        android:onClick="List_Nama"/>

    <Button
        android:id="@+id/button_cari_gambar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Cari Gambar"
        android:onClick="Cari_Gambar"/>

</LinearLayout>
